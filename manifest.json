{
    "manifest_version": 3,
    "name": "Shopee Reviews Scraper",
    "version": "1.0.0",
    "description": "Extract product reviews from Shopee product pages.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "*://*.shopee.com/*",
        "*://*.shopee.com.my/*",
        "*://*.shopee.sg/*",
        "*://*.shopee.ph/*",
        "*://*.shopee.co.id/*",
        "*://*.shopee.vn/*",
        "*://*.shopee.co.th/*",
        "*://*.shopee.tw/*",
        "*://*.shopee.com.br/*",
        "*://*.shopee.com.mx/*",
        "*://*.shopee.cl/*",
        "*://*.shopee.com.co/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.shopee.com/*",
                "*://*.shopee.com.my/*",
                "*://*.shopee.sg/*",
                "*://*.shopee.ph/*",
                "*://*.shopee.co.id/*",
                "*://*.shopee.vn/*",
                "*://*.shopee.co.th/*",
                "*://*.shopee.tw/*",
                "*://*.shopee.com.br/*",
                "*://*.shopee.com.mx/*",
                "*://*.shopee.cl/*",
                "*://*.shopee.com.co/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}